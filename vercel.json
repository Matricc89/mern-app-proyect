{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "outputDirectory": "public"
            }
        }
    ],
    "env": {
        "MY_FRAMEWORK_VERSION": "1.0.0"
    },
    "routes": [
        {
            "src": "/api/.*",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "public/$1"
        }
    ]
}